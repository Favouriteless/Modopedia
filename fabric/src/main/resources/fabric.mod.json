{
    "schemaVersion": 1,
    "id": "modopedia",
    "version": "${version}",
    "name": "Modopedia",
    "description": "Data-driven, user-friendly documentation.",
    "authors": [
        "${author}"
    ],
    "contact": {
        "homepage": "https://github.com/Favouriteless/Modopedia"
    },
    "license": "MIT",
    "icon": "modopedia.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "net.favouriteless.modopedia.fabric.ModopediaFabric"
        ],
        "client": [
            "net.favouriteless.modopedia.fabric.client.ModopediaFabricClient"
        ]
    },
    "mixins": [
        "modopedia.mixins.json",
        "modopedia.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": ">=${fabric_api_version}",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=21"
    },
    "accessWidener" : "modopedia.accesswidener"
}
  